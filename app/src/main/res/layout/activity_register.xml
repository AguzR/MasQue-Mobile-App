<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/colorBaseApp">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tittle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"
            android:text="Lengkapi data dirimu, di bawah ini !"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/layName"
            android:layout_below="@id/tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelnama"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:text="Nama Lengkap"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/name"
                android:hint="Contoh: Nama Lengkap"
                android:textSize="16sp"
                android:textStyle="bold"
                android:inputType="textPersonName|textCapWords"
                android:layout_below="@id/labelnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/warningname"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="Nama tidak boleh kosong !"
                android:textColor="#FF0000"
                android:layout_below="@id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layUname"
            android:layout_below="@id/layName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labeluname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="Username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/uname"
                android:hint="Contoh: namalengkap"
                android:textSize="16sp"
                android:textStyle="bold"
                android:inputType="text"
                android:layout_below="@id/labeluname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/warninguname"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="Nama tidak boleh kosong !"
                android:textColor="#FF0000"
                android:layout_below="@id/uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/layUname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/unameget"
                android:text="uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/verify_id"
                android:text="verify_id"
                android:layout_below="@id/unameget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/verify_id"
                android:id="@+id/phone"
                android:text="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

