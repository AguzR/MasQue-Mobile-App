<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/time"
                    android:text="20:00"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imagePsn"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/imagePsn"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agus Riyanto"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/pesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Speakernya kurang keras, terutama waktu adzan itu ga sampe ke rumah, padahal ga terlalu jauh dari masjid, segera di up yah."
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#f7f3f3"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/nameMasjid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Masjid Besar"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/balasan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="100"
                            android:text="Terimakasih atas laporan yang anda berikan, akan segera kami proses secepatnya." />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:background="#961e90ff"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Belum"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>